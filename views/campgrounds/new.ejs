<% layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">새 캠핑장 추가</h1>
  <div class="col-6 offset-md-3">
    <form
      action="/campgrounds"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">이름</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          required
        />
        <div class="invalid-feedback">필수 입력 항목입니다.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">위치</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          required
        />
        <div class="invalid-feedback">필수 입력 항목입니다.</div>
      </div>

      <!-- <div class="mb-3">
        <input type="file" name="image" id="" multiple />
        <label class="form-label" for="image">이미지 URL</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="campground[image]"
          required
        />
        <div class="invalid-feedback">필수 입력 항목입니다.</div>
      </div> -->
      <div class="mb-3">
        <label class="form-label" for="price">캠핑장 가격(1박)</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">&#8361;</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0"
            aria-label="price"
            aria-describedby="price-label"
            name="campground[price]"
            required
          />
          <div class="invalid-feedback">필수 입력 항목입니다.</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">설명</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
          required
        ></textarea>
        <div class="invalid-feedback">필수 입력 항목입니다.</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">이미지 선택하기</label>
        <input
          class="form-control"
          type="file"
          id="image"
          name="image"
          multiple
        />
        <div class="invalid-feedback">필수 입력 항목입니다.</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">추가하기</button>
      </div>
    </form>
    <a href="/campgrounds">목록으로 돌아가기</a>
    <!-- </div>
    </div> -->
  </div>
</div>
